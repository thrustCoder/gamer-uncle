{
  "name": "Gamer Uncle Dev",
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0-jammy",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-dotnettools.csharp",
        "ms-azuretools.vscode-azurefunctions"
      ]
    }
  },
  "containerEnv": {
    "AGENT_SERVICE_API_KEY": "${{ secrets.AGENT_SERVICE_API_KEY }}",
    "AGENT_SERVICE_ENDPOINT": "${{ secrets.AGENT_SERVICE_ENDPOINT }}"
  }
  // "postCreateCommand": "npm install --prefix apps/mobile && dotnet restore services/api"
}
