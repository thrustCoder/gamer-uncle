{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Testing": {
    "DisableRateLimit": true
  },
  "GameSearch": {
    "AppKey": "",
    "MaxResults": 5,
    "MinQueryLength": 3
  },
  "AzureSpeech": {
    "KeyVaultUri": "https://gamer-uncle-dev-vault.vault.azure.net/",
    "KeySecretName": "AzureSpeechKey",
    "Region": "westus",
    "DefaultVoice": "en-US-AvaMultilingualNeural"
  },
  "VoiceService": {
    "FoundryEndpoint": "https://test-foundry.mock/api/projects/test-project",
    "FoundryVoiceEndpoint": "wss://test-foundry.mock/voice",
    "AzureOpenAIEndpoint": "https://test-openai.mock",
    "RealtimeDeploymentName": "test-realtime",
    "SessionTimeoutMinutes": 5,
    "MaxConcurrentSessions": 3
  },
  "Mcp": {
    "Enabled": true,
    "EnableSse": true,
    "EnableWebSocket": false,
    "ConversationLifetimeHours": 1,
    "EnableDetailedLogging": false,
    "MaxQueryHistorySize": 10,
    "SseHeartbeatIntervalSeconds": 60
  }
}
