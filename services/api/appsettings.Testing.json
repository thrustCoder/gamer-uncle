{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Testing": {
    "DisableRateLimit": true
  },
  "ApiAuthentication": {
    "AppKey": ""
  },
  "GameSearch": {
    "MaxResults": 5,
    "MinQueryLength": 3
  },
  "AzureSpeech": {
    "KeyVaultUri": "https://gamer-uncle-dev-vault.vault.azure.net/",
    "KeySecretName": "AzureSpeechKey",
    "Region": "westus",
    "DefaultVoice": "en-US-AvaMultilingualNeural"
  },
  "Mcp": {
    "Enabled": true,
    "EnableSse": true,
    "EnableWebSocket": false,
    "ConversationLifetimeHours": 1,
    "EnableDetailedLogging": false,
    "MaxQueryHistorySize": 10,
    "SseHeartbeatIntervalSeconds": 60
  }
}
