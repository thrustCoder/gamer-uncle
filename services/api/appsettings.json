  "CriteriaCache": {
    "Enabled": true,
    "Environment": "dev",
    "RedisConnectionString": "@Microsoft.KeyVault(SecretUri=https://gamer-uncle-dev-vault.vault.azure.net/secrets/CriteriaCacheRedisConnection)",
    "L1ExpirationMinutes": 10,
    "L2ExpirationMinutes": 30
